{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist/types",
        "types": ["vitest", "jsdom"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
