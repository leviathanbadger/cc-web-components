{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "env": {
        "browser": true,
        "es2020": true,
        "node": true
    },
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "no-trailing-spaces": "error",
        "eol-last": ["error", "always"]
    }
}
