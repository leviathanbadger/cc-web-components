{
    "name": "cc-web-components",
    "version": "0.1.0",
    "description": "Experimenting with Codex to create WASM user controls/components mimicking some of the controls in Adobe CC products, written in Rust.",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build:wasm": "cargo build --target wasm32-unknown-unknown --manifest-path Cargo.toml",
        "build": "npm run build:wasm && vite build",
        "lint": "eslint --ext .ts src && cargo fmt -- --check && cargo clippy -- -D warnings",
        "test": "vitest run"
    },
    "devDependencies": {
        "@types/jsdom": "^21.1.7",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "eslint": "^9.27.0",
        "jsdom": "^26.1.0",
        "prettier": "^3.5.3",
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "vitest": "^3.1.3"
    },
    "dependencies": {
        "lit": "^3.3.0"
    }
}
